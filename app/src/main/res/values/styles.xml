    <!-- 自定义AppBaseTheme -->
    <style name="AppBaseTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!--选中状态icon的颜色和字体颜色-->
        <!--<item name="android:fitsSystemWindows">true</item>-->
        <item name="colorPrimary">@android:color/holo_blue_dark</item>
        <item name="colorPrimaryDark">@android:color/holo_blue_dark</item>
        <item name="colorAccent">@android:color/holo_green_light</item>
        <!--正常状态下字体颜色和icon颜色-->
        <item name="android:textColorPrimary">@android:color/white</item>
    </style>

    <!-- 应用全局样式 -->
    <style name="AppTheme" parent="AppBaseTheme">

    </style>

    <!-- 底部状态栏统一样式 -->
    <style name="footbar">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_weight">1</item>
        <item name="android:gravity">center</item>
        <item name="android:background">@null</item>
        <item name="android:button">@null</item>
    </style>

    <!-- 底部RadioButton统一样式 -->
    <style name="main_footbar_radio" parent="footbar">
        <item name="android:paddingTop">5dp</item>
        <item name="android:paddingBottom">5dp</item>
        <item name="android:drawablePadding">3dp</item>
        <item name="android:textSize">@dimen/text_size_11</item>
        <item name="android:textColor">@drawable/footer_text_color</item>
    </style>

    <!-- 比较常用的宽高 -->
    <style name="wrap_wrap">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="wrap_fill">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">fill_parent</item>
    </style>

    <style name="fill_wrap">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="fill_fill">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">fill_parent</item>
    </style>


    <!-- news_list_text_info_style-->
    <style name="news_list_text_info" parent="wrap_wrap">
        <item name="android:textSize">@dimen/text_size_11</item>
        <item name="android:textColor">@color/day_infoTextColor</item>
        <item name="android:gravity">center_vertical</item>
    </style>
    <!-- news_list_text_title_style-->
    <style name="list_text_title" parent="@style/wrap_wrap">
        <item name="android:textColor">@color/day_textColor</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">normal</item>
    </style>
</resources>
